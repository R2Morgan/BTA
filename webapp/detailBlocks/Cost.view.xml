<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <VBox class="sapUiSmallMargin">
        <f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer ariaLabelledBy="Title2">
						<f:formElements>
							<f:FormElement label="{i18n>DiemA}">
								<TextArea value="{DiemA} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>DiemR}">
								<TextArea value="{DiemR} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>Hotel}">
								<TextArea value="{Hotel} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>Train}">
								<TextArea value="{Train} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>RentalCar}">
								<TextArea value="{RentalCar} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>Gas}">
								<TextArea value="{Gas} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>Bank}">
								<TextArea value="{Bank} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>BusinessMeal}">
								<TextArea value="{BusinessMeal} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>FoodAndBev}">
								<TextArea value="{FoodAndBev} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>ItSupplies}">
								<TextArea value="{ItSupplies} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>OfficeSupplies}">
								<TextArea value="{OfficeSupplies} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>AirFare}">
								<TextArea value="{AirFare} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="{i18n>Total}">
								<TextArea value="{Total} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
						</f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</mvc:View>