<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.Login"
    xmlns="sap.m">

    <Page   enableScrolling="false"  >
        <headerContent >
			
            <Bar>
				<contentLeft>
					<Image src="images/MHP17_00180_300_cmyk.jpg"  width="8rem"/>
				</contentLeft>
				<contentMiddle>
					<Title  text="{i18n>homePageTitle}" level="H3"/>
				</contentMiddle>
			</Bar>

            
		</headerContent>
    <FlexBox
    direction="Column"
        alignItems="Center"
        justifyContent="Center"
        height="550px">
   
    <items>
    <Input
      id="username"
      placeholder="Username" 
      width="15rem"
      type="Text"/>
      <Input
      id="password"
      placeholder="Password"
      type="Password"
      width="15rem"
      />
    <Button
        text="Login"
        press="onValidation"
        width="15rem"
        class="sapUiSmallMarginBottom"
        icon="sap-icon://action"
        />
        <!-- textfield gol -->
        <Link id="link" text="Forgot Password?"  press="onForgotPass"/>
    </items>
    
    </FlexBox>
   

</Page>
</mvc:View>