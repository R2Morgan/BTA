<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" controllerName="intern2020.controller.Login"
    xmlns="sap.m">

    <Page enableScrolling="false">
        <headerContent >

            <Bar>
                <contentLeft>
                    <Image src="images/MHP_Logo_No_Background.png" width="8rem"/>
                </contentLeft>
                <contentMiddle>
                    <Title text="{i18n>homePageTitle}" level="H3"/>
                </contentMiddle>
                <contentRight>
                    <HBox><items>
                    
                    <Button type="Ghost" text="DE" icon="images/DE_Flag.png" press="onSwitchToGerman"/>
                    <Button type="Ghost" text="EN" icon="images/EN_Flag.png" press="onSwitchToEnglish"/>
                    </items></HBox>
                    
                </contentRight>
            </Bar>


        </headerContent>
        <FlexBox direction="Column" alignItems="Center" justifyContent="Center" height="550px">

            <items>
                <Input id="username" placeholder="{i18n>Username}" width="15rem" type="Text"/>
                <Input id="password" placeholder="{i18n>Password} " type="Password" width="15rem" />
                <Button text="{i18n>Login}" press="onValidation" width="15rem" class="sapUiSmallMarginBottom" icon="sap-icon://action" />
                <Link id="link" text="Forgot Password?" press="onForgotPass"/>
            </items>

        </FlexBox>




    </Page>
</mvc:View>