<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.Login"
    xmlns="sap.m">

    <Page title="{i18n>homePageTitle}"  enableScrolling="false">
        <ObjectHeader
                    responsive="true"
                    fullScreenOptimized="true"
                    
                    intro="You need to login with your company's username"
                    title="Welcome to SAP Travel Tool App"
                    showMarkers="true"
                    markFlagged="true"
                    
                    numberState="Success"
                    backgroundDesign="Translucent">
                <attributes>
                    <ObjectAttribute
                            title="Team 5"
                            />
                </attributes>
                <statuses>
                    <ObjectStatus
                            title="Status"
                            text="Not Logged in"
                            state="Warning"/>
                </statuses>
            </ObjectHeader>
    <FlexBox
        direction="Column"
        alignItems="Center"
        justifyContent="Center"
        height="600px">
    <items>
    <Input
      id="username"
      placeholder="Username" 
      width="12rem"
      type="Text"/>
      <Input
      id="password"
      placeholder="Password"
      type="Password"
      width="12rem"
      />
    <Button
        text="Login"
        press="onValidation"
        width="10rem"
        icon="sap-icon://action"
        />
        <Link id="link" text="Forgot Password?" emphasized="true" press="onForgotPass"/>
    </items>
    
    </FlexBox>

</Page>
</mvc:View>