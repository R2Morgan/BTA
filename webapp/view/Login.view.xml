<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.Login"
    xmlns="sap.m">

    <Page   enableScrolling="false"  >
        <headerContent >
			
            <Bar>
				<contentLeft>
					<Image src="images/MHP19_00012.png"  width="8rem"/>
				</contentLeft>
				<contentMiddle>
					<Title  text="{i18n>homePageTitle}" level="H3"/>
				</contentMiddle>
			</Bar>

            
		</headerContent>
    <FlexBox
        direction="Column"
        alignItems="Center"
        justifyContent="Center"
        height="600px">
    <items>
    <Input
      id="username"
      placeholder="Username" 
      width="12rem"
      type="Text"/>
      <Input
      id="password"
      placeholder="Password"
      type="Password"
      width="12rem"
      />
    <Button
        text="Login"
        press="onValidation"
        width="10rem"
        icon="sap-icon://action"
        />
        <Link id="link" text="Forgot Password?" emphasized="true" press="onForgotPass"/>
    </items>
    
    </FlexBox>

</Page>
</mvc:View>