<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.Login"
    xmlns="sap.m">

    <Page   enableScrolling="false"  >
        <headerContent >
			
            <Bar>
				<contentLeft>
					<Image src="images/MHP_Logo.jpg"  width="8rem"/>
				</contentLeft>
				<contentMiddle>
					<Title  text="{i18n>homePageTitle}" level="H3"/>
				</contentMiddle>
                <contentRight>
                    <MenuButton  icon="sap-icon://globe">
				    <menu>
					<Menu itemSelected="onMenuAction">
						<items>
							<MenuItem text="DE" icon="images/DE_Flag.png" press="onSwitchToEnglish"/>
                            <MenuItem text="EN" icon="images/EN_Flag.png" press="onSwitchToGerman"/>
						</items>
					</Menu>
				</menu>
			</MenuButton>
                </contentRight>
			</Bar>

            
		</headerContent>
    <FlexBox
        direction="Column"
        alignItems="Center"
        justifyContent="Center"
        height="600px">
    <items>
    <Input
      id="username"
      placeholder="{i18n>Username}" 
      width="20rem"
      type="Text"/>
      <Input
      id="password"
      placeholder="{i18n>Password}"
      type="Password"
      width="20rem"
      />
    <Button
        text="{i18n>Login}"
        press="onValidation"
        width="20rem"
        icon="sap-icon://action"
        />
        <Link id="link"  class="sapUiMediumMarginTop" text="{i18n>forgotPass}"  press="onForgotPass"/>
    </items>
    
    </FlexBox>

</Page>
</mvc:View>