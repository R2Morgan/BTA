<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.Login"
    xmlns="sap.m">

    <Page   enableScrolling="false"  >
        <headerContent >
			
            <Bar>
				<contentLeft>
					<Image src="images/MHP19_00012.png"  width="8rem"/>
				</contentLeft>
				<contentMiddle>
					<Title  text="{i18n>homePageTitle}" level="H3"/>
				</contentMiddle>
			</Bar>

            
		</headerContent>
    <FlexBox
        direction="Column"
        alignItems="Center"
        justifyContent="Center"
        height="600px">
    <items>
    <Input
      id="username"
      placeholder="{i18n>Username}" 
      width="20rem"
      type="Text"/>
      <Input
      id="password"
      placeholder="{i18n>Password}"
      type="Password"
      width="20rem"
      />
    <Button
        text="{i18n>Login}"
        press="onValidation"
        width="20rem"
        icon="sap-icon://action"
        />
        <Link id="link"  class="sapUiMediumMarginTop" text="{i18n>forgotPass}"  press="onForgotPass"/>
    </items>
    
    </FlexBox>

</Page>
</mvc:View>