<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <VBox class="sapUiSmallMargin">
        <f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1">
            <f:layout>
                <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer ariaLabelledBy="Title2">
						<f:formElements>
							<f:FormElement label="Allowence per day">
								<Input value="{DiemA} EUR" width="100%" editable="false"  height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Rate per day">
								<Input value="{DiemR} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Hotel cost">
								<Input value="{Hotel} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Train cost">
								<Input value="{Train} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Rental car cost">
								<Input value="{RentalCar} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Gas cost">
								<Input value="{Gas} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Bank cost">
								<Input value="{Bank} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Business meal cost">
								<Input value="{BusinessMeal} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Food and beverage cost">
								<Input value="{FoodAndBev} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="IT supplies cost">
								<Input value="{ItSupplies} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Office supplies cost">
								<Input value="{OfficeSupplies} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Air fare cost">
								<Input value="{AirFare} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
							<f:FormElement label="Total cost">
								<Input value="{Total} EUR" width="100%" editable="false" height="1rem"/>
							</f:FormElement>
						</f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</mvc:View>