<mvc:View height="100%" controllerName="intern2020.controller.User"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<Page title="{i18n>userPage}" enableScrolling="true" 
	class="sapUiContentPadding nonTransparentPage" showNavButton="{= ${UserInfo>/isManager} ? true : false}" navButtonPress="goToManager"
	visible="{UserInfo>/isUser}">
	
		<headerContent>
			<MenuButton text="{i18n>MyProfile}" icon="sap-icon://customer">
				<menu>
					<Menu itemSelected="onMenuAction">
						<items>
							<MenuItem text="Account Info" id="profile" icon="sap-icon://account" press="onGoToPage"/>
							<MenuItem visible="{UserInfo>/isManager}" id="manager" text="Manage other's trips" icon="sap-icon://suitcase" press="onGoToPage"/>
							<MenuItem text="Plan your trip" id="information" icon="sap-icon://weather-proofing" press="onGoToPage"/>
							<MenuItem text="Change Password" id="changePassword" icon="sap-icon://action-settings" press="onGoToPage" />
							<MenuItem text="{i18n>Back}" id="back" icon="sap-icon://log" press="goToLoginAndLogOut"/>
						</items>
					</Menu>
				</menu>
			</MenuButton>
		</headerContent>

		<content>
			<Table selectionChange="handleSelectionChange" id="idTrips" items="{path: '/Front_TripSet', events: {
			dataReceived: '.onDataReceived'}}">
				<headerToolbar>
					<OverflowToolbar id="otbSubheader">
						<ToggleButton icon="sap-icon://accept" id="approvedButton" text="{i18n>Approved}" pressed="false" press="onFilterByStatus" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" type="Accept">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="14em" maxWidth="20em" shrinkable="true"/>
							</layoutData>
						</ToggleButton>
						<ToggleButton icon="sap-icon://time-account" id="toBeApprovedButton" type="Ghost" pressed="false" text="To Be Approved" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" press="onFilterByStatus">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="14em" maxWidth="20em" shrinkable="true"/>
							</layoutData>
						</ToggleButton>
						<ToggleButton icon="sap-icon://decline" id="declinedButton" pressed="false" text="{i18n>Declined}" press="onFilterByStatus" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" type="Reject">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="14em" maxWidth="20em" shrinkable="true"/>
							</layoutData>
						</ToggleButton>

						<ToolbarSpacer/>
						<SearchField id="searchField" width="50%" search=".onFilterBySearch">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="200px" maxWidth="300px" shrinkable="true"/>
							</layoutData>

						</SearchField>
						<Button text="{i18n>Reset}" class="resetare" type="Ghost" press="onReset"/>
					</OverflowToolbar>
				</headerToolbar>

				<columns>
					<Column minScreenWidth="370px" hAlign="Center">
						<Button iconFirst="false" id="StartDate" text="{i18n>Date}" icon="sap-icon://sort" type="Transparent" press=".onSortUser"/>
					</Column>
					<Column minScreenWidth="Small" hAlign="Center">
						<Button iconFirst="false" id="Country" text="{i18n>Country}" icon="sap-icon://sort" type="Transparent" press=".onSortUser"/>
					</Column>
					<Column minScreenWidth="Tablet" hAlign="Center">
						<Button iconFirst="false" id="City" text="City" icon="sap-icon://sort" type="Transparent" press=".onSortUser"/>
					</Column>
					<Column minScreenWidth="Phone" hAlign="Center">
						<Button iconFirst="false" id="Reason" text="Travel reason" icon="sap-icon://sort" type="Transparent" press=".onSortUser"/>
					</Column>
					<Column minScreenWidth="Large" hAlign="Center">
						<Button iconFirst="false" id="Status" text="{i18n>Status}" icon="sap-icon://sort" type="Transparent" press=".onSortUser"/>
					</Column>
					<Column minScreenWidth="Desktop" hAlign="Center">
						<Button iconFirst="false" id="Total" text="{i18n>Total}" icon="sap-icon://sort" type="Transparent" press=".onSortUser"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press=".onPressDetail" id="tripItem">
						<cells>
							<Text text="{
											path: 'StartDate',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
												style: 'short'
											}
										} - {path: 'EndDate',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
												style: 'short'
												}}" />
							<Text text="{Country}" />
							<Text text="{City}" />
							<Text text="{Reason}" />
							<ObjectNumber number="{= ${Status} === 1 ? 'Approved' : ${Status} === 0 ? 'To Be Approved' : 'Declined'}" state="{= ${Status} === 1 ? 'Success' : ${Status} === 0 ? 'Warning' : 'Error'}" />
							<Text text="{Total} EUR"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>
