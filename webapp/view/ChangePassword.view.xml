<mvc:View height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" controllerName="intern2020.controller.ChangePassword"
    xmlns="sap.m">
    <Page title="{i18n>change}" id="changePassPage" class="sapUiContentPadding nonTransparentPage" showNavButton="true" navButtonPress="onNavBack" visible="{UserInfo>/isUser}">
        <Panel >
            <FlexBox direction="Column" height="500px" alignItems="Center" justifyContent="End">
                <items>
                   
            
                    <Label text="{i18n>oldPass}*" class="sapUiTinyMarginTop" width="20rem"/>
                    <Input type="Password"  id="inputOld" width="20rem"/>

                    <Label text="{i18n>newPass}*" width="20rem"/>
                    <Input type="Password" id="inputNew"  width="20rem"/>
                    <Label text="{i18n>confirm}*" width="20rem"/>
                    <Input type="Password" id="inputNewCheck" width="20rem"/>
                    <Button text="{i18n>change}" press="onChangePassword" width="20rem"
        type ="Emphasized" icon="sap-icon://action" />

                    <Label class="sapUiLargeMarginTop"/>
                    <Text text="    {i18n>PasswordInstructionsRow1} {i18n>PasswordInstructionsRow2}" width="50rem"  />
                </items>

            </FlexBox>

        </Panel>
    </Page>
</mvc:View>