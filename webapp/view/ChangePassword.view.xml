<mvc:View height="100%"
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.ChangePassword"
    xmlns="sap.m">
    <Page title="{i18n>change}" class="sapUiContentPadding" showNavButton="true" navButtonPress="onNavBack" visible="{UserInfo>/isUser}">
    <Panel>
    <FlexBox
     direction="Column"
     height="600px"
	 alignItems="Center"
	 justifyContent="End">
    <items>
    <Text text="{i18n>PasswordInstructionsTitle}" width="30rem" class="instr" />
     <Text text="*  {i18n>PasswordInstructionsRow1}" width="30rem" class="instr" />
      <Text  text="* {i18n>PasswordInstructionsRow2}" width="30rem" class="sapUiLargeMarginBottom instr" />
    <Label text="{i18n>oldPass}*"  width="30rem"/>
    <Input type="Password" class="sapUiMediumMarginBottom" id="inputOld" width="30rem"/>

    <Label  text="{i18n>newPass}*"  width="30rem"/>
    <Input type="Password" id="inputNew" class="sapUiLargeMarginBottom" width="30rem"/>
    <Label  text="{i18n>confirm}*"  width="30rem"/>
    <Input type="Password" class="sapUiLargeMarginBottom" id="inputNewCheck" width="30rem"/>  
    <Button 

        text="{i18n>change}"
        press="onChangePassword"
        width="30rem"
        icon="sap-icon://action"
        />
    </items>
    
    </FlexBox>
 
</Panel>
</Page>
</mvc:View>