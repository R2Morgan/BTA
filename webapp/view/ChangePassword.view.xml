<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    
    xmlns="sap.m">
    <Page title="Change your password"><!-- controllerName="intern2020.controller.ForgotPass" -->
    <Panel>
    <Button  press="onGoToLogin" text="Back" icon="sap-icon://nav-back"/>
    <FlexBox
     direction="Column"
     height="500px"
	 alignItems="Center"
	 justifyContent="Center"
        
		>
    <items>
    <Label text="OLD PASSWORD"  width="15rem"/>
    <Input id="inputOld" placeholder="Enter old password" width="15rem"/>
    <Label text=" NEW PASSWORD"  width="15rem"/>
    <Input id="inputNew" placeholder="Enter new password" width="15rem"/>
      
    <Button
        text="Submit"
        press="onValidation"
        width="15rem"
        icon="sap-icon://action"
        />
    </items>
    
    </FlexBox>
 
</Panel>
</Page>
</mvc:View>