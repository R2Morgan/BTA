<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.ChangePassword"
    xmlns="sap.m">
    <Page title="Change your password" class="sapUiContentPadding" showNavButton="true" navButtonPress="onNavBack" visible="{UserInfo>/isUser}">
    <Panel>
    <FlexBox
     direction="Column"
     height="500px"
	 alignItems="Center"
	 justifyContent="Center">
    <items>
    <Label text="Old password"  width="15rem"/>
    <Input type="Password" id="inputOld" width="15rem"/>
    <Label/>
    <Label text="New password"  width="15rem"/>
    <Input type="Password" id="inputNew" width="15rem"/>
      
    <Button
        text="Change password"
        press="onChangePassword"
        width="15rem"
        icon="sap-icon://action"
        />
    </items>
    
    </FlexBox>
 
</Panel>
</Page>
</mvc:View>