<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="intern2020.controller.ChangePassword"
    xmlns="sap.m">
    <Page title="{i18n>change}" class="sapUiContentPadding" showNavButton="true" navButtonPress="onNavBack" visible="{UserInfo>/isUser}">
    <Panel>
    <FlexBox
     direction="Column"
     height="500px"
	 alignItems="Center"
	 justifyContent="End">
    <items>
    <Text text="{i18n>PasswordInstructionsTitle}" width="20rem" class="instr" />
     <Text text="{i18n>PasswordInstructionsRow1}" width="20rem" class="instr" />
      <Text text="{i18n>PasswordInstructionsRow2}" width="20rem" class="sapUiLargeMarginBottom instr" />
    <Label text="{i18n>oldPass}"  width="15rem"/>
    <Input type="Password" class="sapUiMediumMarginBottom" id="inputOld" width="20rem"/>

    <Label text="{i18n>newPass}"  width="15rem"/>
    <Input type="Password" id="inputNew" class="sapUiSmallMarginBottom" width="20rem"/>
    <Label text="{i18n>confirm}"  width="15rem"/>
    <Input type="Password" class="sapUiSmallMarginBottom" id="inputNewCheck" width="20rem"/>  
    <Button 

        text="{i18n>change}"
        press="onChangePassword"
        width="20rem"
        icon="sap-icon://action"
        />
    </items>
    
    </FlexBox>
 
</Panel>
</Page>
</mvc:View>