<mvc:View height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" controllerName="intern2020.controller.ChangePassword"
    xmlns="sap.m">
    <Page title="{i18n>change}" id="changePassPage" class="sapUiContentPadding nonTransparentPage" showNavButton="true" navButtonPress="onNavBack" visible="{UserInfo>/isUser}">
       
            <FlexBox direction="Column" height="500px" alignItems="Center" justifyContent="End">
                <items>
                  
                    <Label text="{i18n>oldPass}*" width="20rem"/>
                    <Input type="Password" class="sapUiSmallMarginBottom" id="inputOld" width="20rem"/>

                    <Label text="{i18n>newPass}*" width="20rem"/>
                    <Input type="Password" id="inputNew" class="sapUiSmallMarginBottom" width="20rem"/>
                    <Label text="{i18n>confirm}*" width="20rem"/>
                    <Input type="Password" class="sapUiSmallMarginBottom" id="inputNewCheck" width="20rem"/>
                    <Button text="{i18n>change}" press="onChangePassword" width="20rem" type ="Emphasized" icon="sap-icon://action" class="sapUiMediumMarginBottom" />

                    <Text text="{i18n>PasswordInstructionsTitle}" width="20rem"  />
                    <Text text="* {i18n>PasswordInstructionsRow1}" width="20rem"  />
                    <Text text="* {i18n>PasswordInstructionsRow2}" width="20rem"  />
                </items>

            </FlexBox>
    </Page>
</mvc:View>