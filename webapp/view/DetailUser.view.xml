<mvc:View

	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
   
	xmlns="sap.m" >
    <Page>

    <ObjectHeader  responsive="true" fullScreenOptimized="true">
    <statuses>
                    <ObjectStatus
                            title="Status"
                            text="Aproved"
                            state="Warning"/>
                </statuses>
    </ObjectHeader>
	<VBox class="sapUiSmallMargin">
		<f:Form id="FormToolbar"
			editable="true"
			ariaLabelledBy="Title1">
			<f:toolbar>
				<Toolbar id="TB1">
					<Title id="Title1" text="Trip Detail" level="H4" titleStyle="H4" emphasized="true"/>
					<ToolbarSpacer />
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer ariaLabelledBy="Title2">
					<f:toolbar>
						<Toolbar>
							<Title id="Title2" text="Trip" level="H5" titleStyle="H5"/>
							<ToolbarSpacer />
						</Toolbar>
					</f:toolbar>
					<f:formElements>
						<f:FormElement label="Trip">

								<TextArea value="locatia" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
						<f:FormElement label="Street">

								<TextArea value="locatia" width="100%" editable="false" height="1rem"/>
                                <TextArea value="locatia" width="100%" editable="false" height="1rem"/>


						</f:FormElement>
						<f:FormElement label="Country">

								<TextArea value="locatia" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
						<f:FormElement label="Cost">

								<TextArea value="locatia" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer ariaLabelledBy="Title3">
					<f:toolbar>
						<Toolbar>
							<Title id="Title3" text="Employee" level="H5" titleStyle="H5"/>
							<ToolbarSpacer />
						</Toolbar>
					</f:toolbar>
					<f:formElements>
						<f:FormElement label="Firstname">
                        <TextArea value="locatia" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
                        </f:formElements>
                        <f:formElements>
						<f:FormElement label="Lastname">
                        <TextArea value="locatia" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
						<f:FormElement label="Phone">

							<TextArea value="locatia" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
        
	</VBox>
    <footer>
			<OverflowToolbar id="otbFooter">
            <Button  press="onGoToLogin" text="Go Back" icon="sap-icon://nav-back"/>
				<ToolbarSpacer/>
				
			</OverflowToolbar>
		</footer>

    </Page>
</mvc:View>