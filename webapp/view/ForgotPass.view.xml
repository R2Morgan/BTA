<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" controllerName="intern2020.controller.ForgotPass"
    xmlns="sap.m">
    <Page class="sapUiContentPadding" showNavButton="true" navButtonPress="onNavBack" title="{i18n>forgotPageTitle}">
            <FlexBox  direction="Column" height="500px" alignItems="Center" justifyContent="Center">
                <items>
                    <Label 
                            class="sapUiMediumMarginBottom"
                            text="{i18n>instructions}" />
                    <Input id="input-c" placeholder="Email address" width="25rem"/>

                    <Button text="{i18n>sendInstruction}" press="onSendEmail" width="25rem" icon="sap-icon://action" />
                </items>

            </FlexBox>
    </Page>
</mvc:View>