<mvc:View height="100%" controllerName="intern2020.controller.Manager"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<Page title="Manager Page" enableScrolling="true" class="sapUiContentPadding" showNavButton="true" 
	 navButtonPress="goToLoginAndLogOut" visible="{UserInfo>/isManager}">
        <headerContent>
			<MenuButton text="My Profile" icon="sap-icon://customer">
				<menu>
					<Menu itemSelected="onMenuAction">
						<items>
							<!-- <MenuItem text="Account Info" icon="sap-icon://account" press="onGoToProfile"/> -->
							<MenuItem text="Change Password" icon="sap-icon://action-settings" press="onGoToSettings" />
							<MenuItem text="Your own trips" icon="sap-icon://suitcase" press="onGoToYourTrips"/>
						</items>
					</Menu>
				</menu>
			</MenuButton>
		</headerContent>		

		<content>
			<Table selectionChange="handleSelectionChange" id="idTrips" items="{/Front_TripSet}">
				<headerToolbar >
					<OverflowToolbar id="otbSubheader">
						<ToggleButton id="approvedButton" icon="sap-icon://accept" text="Approved" pressed="false" press="onFilterByStatus" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" type="Accept">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="14em" maxWidth="20em" shrinkable="true"/>
							</layoutData>
						</ToggleButton>
						<ToggleButton id="toBeApprovedButton" icon="sap-icon://time-account" type="Ghost" pressed="false" text="To Be Approved" class="sapUiTinyMarginBegin sapUiTinyMarginEnd buton" press="onFilterByStatus">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="14em" maxWidth="20em" shrinkable="true"/>
							</layoutData>
						</ToggleButton>
						<ToggleButton id="declinedButton" icon="sap-icon://decline" pressed="false" text="Declined" press="onFilterByStatus" class="sapUiTinyMarginBegin sapUiTinyMarginEnd" type="Reject">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="14em" maxWidth="20em" shrinkable="true"/>
							</layoutData>
						</ToggleButton>
						
						<ToolbarSpacer/>
						<SearchField id="searchField" width="25%" search="onFilterBySearch">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="200px" maxWidth="400px" shrinkable="true"/>
							</layoutData>
						</SearchField>
						<Button text="Reset"  press="onReset" class="resetare" type="Ghost" tooltip="Clear all sortings"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column  hAlign="Center">
						<Button iconFirst="false" id="serviceUnitButton" text="Service unit" icon="sap-icon://sort" type="Transparent" press=".onSortByServiceUnit"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Button iconFirst="false" id="dateButton" text="Date" icon="sap-icon://sort" type="Transparent" press=".onSortByDate"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Button iconFirst="false" id="usernameButton" text="Username" icon="sap-icon://sort" type="Transparent" press=".onSortByUsername"/>
					</Column>
					<Column hAlign="Center" >
						<Button iconFirst="false" id="countryButton" text="Country" icon="sap-icon://sort" type="Transparent" press=".onSortByCountry"/>
					</Column>
					<Column hAlign="Center">
						<Button iconFirst="false" id="price" text="Price" icon="sap-icon://sort" type="Transparent" press=".onSortByStatus"/>
					</Column>
					<Column hAlign="Center">
						<Button iconFirst="false" id="status" text="Status" icon="sap-icon://sort" type="Transparent" press=".onSortByStatus"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press=".onPressDetail">
						<cells>
							<ObjectIdentifier text="{ServiceUnit}" />
							<Text text="{
											path: 'StartDate',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
												style: 'short'
											}
										} - {path: 'EndDate',
											type: 'sap.ui.model.type.Date',
											formatOptions: {
												style: 'short'
												}}" />
							<Text text="{UId}" />
							<Text text="{Country}" />
							<Text text="{Total} EUR" />
							<ObjectNumber number="{= ${Status} === 1 ? 'Approved' : ${Status} === 0 ? 'To Be Approved' : 'Declined'}"
							     	      state="{= ${Status} === 1 ? 'Success' : ${Status} === 0 ? 'Warning' : 'Error'}" />
						<!--	<Text text="{Country}" visbile="{= ${UserInfo>/isUser} === 'user' ? false :true}" />-->	
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>

	</Page>
</mvc:View>
