<mvc:View

	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	controllerName="intern2020.controller.Detail"
	xmlns="sap.m" >
    <Page visible="{UserInfo>/isManager}">
	<VBox class="sapUiSmallMargin" >
		<f:Form id="FormToolbar"
			editable="true"
			ariaLabelledBy="Title1">
			<f:toolbar>
				<Toolbar id="TB1">
					<Title id="Title1" text="Trip Detail" level="H4" titleStyle="H4" />
					<ToolbarSpacer />
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="3"
					labelSpanM="4"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="4"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="1"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer ariaLabelledBy="Title2">
					<f:toolbar>
						<Toolbar>
							<Title id="Title2" text="Trip" level="H5" titleStyle="H5"/>
							<ToolbarSpacer />
						</Toolbar>
					</f:toolbar>
					<f:formElements>
						<f:FormElement label="Trip Id">

								<TextArea value="{TripId}" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
						<f:FormElement label="Status">

								<TextArea value="{Status}" width="100%" editable="false" height="1rem"/>
                               


						</f:FormElement>
						<f:FormElement label="Country">

								<TextArea value="{Country}" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
						<f:FormElement label="Cost">

								<TextArea value="{Total}" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer ariaLabelledBy="Title3">
					<f:toolbar>
						<Toolbar>
							<Title id="Title3" text="Employee" level="H5" titleStyle="H5"/>
							<ToolbarSpacer />
						</Toolbar>
					</f:toolbar>
					<f:formElements>
						<f:FormElement label="Firstname">
                        <TextArea value="{FirstName}" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
                        </f:formElements>
                        <f:formElements>
						<f:FormElement label="Lastname">
                        <TextArea value="{LastName}" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
						<f:FormElement label="Phone">

							<TextArea value="{PhoneNr}" width="100%" editable="false" height="1rem"/>

						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
        
	</VBox>
    <footer>
			<OverflowToolbar id="otbFooter">
            <Button  press="onGoBack" text="Go Back" icon="sap-icon://nav-back"/>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept" width="12rem" press="onPressAccept">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
				</Button>
				<Button type="Reject" text="Reject" width="12rem" press="onPressDecline" >
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow"/></layoutData>
				</Button>


			</OverflowToolbar>
		</footer>

    </Page>
</mvc:View>